<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # On laisse passer directement le fichier index.html
  RewriteRule ^index\.html$ - [L]
  
  # Si le fichier ou le dossier demandé existe, on le sert tel quel
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  
  # Sinon, on redirige tout vers index.html pour que Vue Router gère la route
  RewriteRule . /index.html [L]
</IfModule>
